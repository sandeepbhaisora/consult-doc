<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical">
        
        <ImageView
            android:id="@+id/doctors_recycler_image"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/man"
            android:scaleType="centerCrop"></ImageView>
        
        <TextView
            android:id="@+id/doctors_recycler_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="sample"></TextView>
        
        <RatingBar
            android:id="@+id/doctors_recycler_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="4.3"
            style="@style/Widget.AppCompat.RatingBar.Small"></RatingBar>

        <TextView
            android:id="@+id/doctors_recycler_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sample description sample description sample description"
            ></TextView>
    </LinearLayout>

</androidx.cardview.widget.CardView>